<!DOCTYPE html>
<html>
  <head>
    <title>Homepage</title>
   	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
	<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
	
	<script>
	$(function(){
  		$(".category").click(function(){
  			var catid = $(this).attr("id");
  			$.ajax({
			  url: "/list/"+catid,
			  type: "get",
			  success : function(data){		  
			  	var tmp = "";
			  	//console.log(JSON.stringify(data));
			  	for(var i= 0; i < data.length; i++){
			  		tmp += "<a href=";
			  		tmp += "/buyPage/"+data[i].Product_id + '>';
			  		tmp +=data[i].Product_name+"</a><br>";
			  	}
			  	console.log(tmp);
			  	$("#content_"+catid).html(tmp);
			  }
			});
  		});
  		
  		$("#changeC").click(function(){
  			var changeObj = $(this);
  			var str = changeObj.html();
  			var url = "";
  			if(str == "Deactivate customer account"){
  				url = "/bdeactivate/";
  			}else{
  				url = "/bactivate/";
  			}
  			
  			$.ajax({
  				url: url,
  				type: "post",
  				success: function(data){
  					console.log("succ");
  					if(url == "/bdeactivate/"){
  					  //console.log("a");
  						changeObj.html("Activate customer account");
  					}else{
  						//console.log("d");
  						changeObj.html("Deactivate customer account");
  					}
  					
  				}
  			});
  			
  			
  		});
  		
  		$("#changeS").click(function(){
  			var changeObj = $(this);
  			var str = changeObj.html();
  			var url = "";
  			if(str == "Deactivate seller account"){
  				url = "/sdeactivate/";
  			}else{
  				url = "/sactivate/";
  			}
  			
  			$.ajax({
  				url: url,
  				type: "post",
  				success: function(data){
  					console.log("succ");
  					if(url == "/sdeactivate/"){
  						console.log("a");
  						changeObj.html("Activate seller account");
  					}else{
  						console.log("d");
  						changeObj.html("Deactivate seller account");
  					}
  					
  				}
  			});
  			
  			
  		});
  		
  		$("#options").change(function() {
	 		$(this).css({'width':'400px'});
	  	});
  		
  	});
   				  

  	
  	
	</script>
  </head>
  
  <body>
  	
